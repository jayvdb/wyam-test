Title: All Tags
ShowInNavbar: false
---

<div class="ui basic vertical spaced segment">          
  @foreach (IDocument tagDocument in Documents[Blog.Tags].OrderBy(x => x.String(BlogKeys.Tag)))
  {
    string tag = tagDocument.String(BlogKeys.Tag);
    string postCount = tagDocument.String(Keys.TotalItems);

    <a role="button" href="@Context.GetLink(tagDocument)" class="ui basic small compact button"> @tag (@postCount)</a>
  }
</div>